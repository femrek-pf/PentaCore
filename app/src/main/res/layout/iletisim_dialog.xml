<?xml version="1.0" encoding="utf-8"?>
<com.eksioglu.faruk.divisiblegridlayout.DivisibleGridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/iletisimDialog_ConstraintLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/property_layout_background"
    app:midDot_padding="2dp"
    app:divider_background_color="@color/property_divider"
    app:midDot_background_color="@color/property_divider"
    app:columnCount="2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iletisimImage_discord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/discord_icon" />

        <TextView
            android:id="@+id/iletisimText_discord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discord"
            android:textColor="@color/light_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iletisimImage_github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/github_icon"/>

        <TextView
            android:id="@+id/iletisimText_github"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Github"
            android:textColor="@color/light_text" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iletisimImage_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/globe_icon"/>

        <TextView
            android:id="@+id/iletisimText_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web"
            android:textColor="@color/light_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iletisimImage_linkedin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/linkedin_icon"/>

        <TextView
            android:id="@+id/iletisimText_linkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linkedin"
            android:textColor="@color/light_text" />
    </LinearLayout>

</com.eksioglu.faruk.divisiblegridlayout.DivisibleGridLayout>